	"KnucklesCrosshair"
	{
		// THE CROSSHAIR IF ENABLED AS-IS
		// PROVIDES A CIRCLE FOR SHOTGUN SPREAD
		
		// Crosshair Value
		// see crosshair-preview.png for info
		"labelText"		"h"
		
		// to enable, set both to "1"
		"visible"		"0"
		"enabled"		"0"
		
		// Crosshair Settings
		// Crosshair Name, Size:10-40, Outline:On/Off, Blur:On/Off.
		// Size can be between 10 and 40. Anything higher or lower will not work.
		// Removing any of the values from below will cause the crosshair to break.
		"font"			"Knuckles, Size:40, Outline:Off, Blur:Off"
		
		// color
		// use "KnucklesDefault" or an RGBA value in the format of
		// "0 255 0 255"
		// the first 3 being RGB and the last one being transparency
		// 255 being solid
		//"fgcolor"		"KnucklesDefault"
		"fgcolor"		"255 255 255 255"
		
		
		
		
		
		
		
		
		//
		// Don't touch me, I'm fragile!
		//
		
		"controlName"	"CExLabel"
		"fieldName"		"KnucklesCrosshair"
		"zpos"			"10"
		"textAlignment"	"center"
		
		// ONLY touch the following if not centered
		
		// Horizontal Position
		"xpos"			"c-100"
		"xpos-minmode" "9999"
		
		// Vertical Position
		"ypos"			"c-100"
		"ypos-minmode" "9999"
		
		// Width
		"wide"			"200"//202"
		
		// Height
		"tall"			"200"//198"
	}
	
	
	
	
	
	
	
	
	
